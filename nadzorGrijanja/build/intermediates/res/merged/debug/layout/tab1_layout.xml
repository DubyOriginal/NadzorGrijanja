<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="System Monitor"
        android:textColor="#FFBF00"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tempStr ="
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#87CEFF" />

                <TextView
                    android:id="@+id/tv1B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="21,5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#87CEFF" />

                <TextView
                    android:id="@+id/tv1C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="°C"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#87CEFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv2A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tempPtr ="
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#98FB98" />

                <TextView
                    android:id="@+id/tv2B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="55,4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#98FB98" />

                <TextView
                    android:id="@+id/tv2C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="°C"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#98FB98" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv3A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tempZtr ="
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFF68F" />

                <TextView
                    android:id="@+id/tv3B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="17,4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFF68F" />

                <TextView
                    android:id="@+id/tv3C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="°C"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFF68F" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivFire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/fire"
            android:scaleType="center"
            android:layout_marginTop="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/simple_border_left_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/simple_border_right_bottom" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoText="false"
                android:gravity="center"
                android:text="TRIGGERED"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff2050"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/simple_border_right_bottom" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/minitogglesws"
                android:background="@drawable/simple_border_right_bottom"
                android:scaleType="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgViewBT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/pumpsmal"
                android:background="@drawable/simple_border_right_bottom"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/ivTPump"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/triggnos"
                android:background="@drawable/simple_border_right_bottom" />

            <ImageView
                android:id="@+id/ivSWPump"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/buttonons"
                android:background="@drawable/simple_border_right_bottom"
                android:scaleType="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/alarm_icon_48"
                android:background="@drawable/simple_border_right_bottom"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/ivTAlarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/triggyess"
                android:background="@drawable/simple_border_right_bottom" />

            <ImageView
                android:id="@+id/ivSWAlarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/buttonoffs"
                android:background="@drawable/simple_border_right_bottom"
                android:scaleType="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRefresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/refresh" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:text="Connection Status:"
                    android:textColor="#FF3333" />

                <ImageView
                    android:id="@+id/imgViewBlueTooth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="0dp"
                    android:src="@drawable/bluetooth_disconnected2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>